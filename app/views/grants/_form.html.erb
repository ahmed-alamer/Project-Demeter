<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @view_title %></h3>
    </div>
    <div class="panel-body">
      <%= form_for(@grant, layout: :basic) do |f| %>
        <div class="field">
          <%= f.text_field :amount %>
        </div>
        <div id="bloodhound">
          <%= f.text_field :project_id %>
        </div>
        <div class="field">
          <%= f.text_field :receiver_wallet %>
        </div>
        <div class="field">
          <label for="grant_type_tag">Type</label>
          <select name="grant[type_tag]" id="grant_type_tag" class="form-control">
            <option value="PGRT">PGRT</option>            
            <option value="AGRT">AGRT</option>
          </select>
        </div>
        <br/>
        <div class="actions">
          <%= f.submit %>
          <%= link_to "Back", grants_path, :class => "btn btn-default" %>
        </div>
      <% end %>
    </div>
</div>

<script type="text/javascript">
  bindTypeahead("grant_project_id", "projects");
</script>