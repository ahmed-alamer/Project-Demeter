<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @view_title %></h3>
    </div>
    <div class="panel-body">
      <%= form_for(@grant, layout: :basic) do |f| %>
        <div class="field">
          <%= f.text_field :entry_date %>
        </div>
        <div class="field">
          <%= f.text_field :approval_code %>
        </div>
        <div class="field">
          <%= f.text_field :amount %>
        </div>
        <div class="field">
          <%= f.text_field :project_id %>
        </div>
        <div class="field">
          <%= f.text_field :receiver_wallet %>
        </div>
        <div class="actions">
          <%= f.submit %>
          <%= link_to "Back", grants_path, :class => "btn btn-default" %>
        </div>
      <% end %>
    </div>
</div>