<% if notice %>
<div class="alert alert-info">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p id="notice"><%= notice %></p>
</div>
<br/>
<% end %>
<div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Grant Details</h3>
    </div>
    <div class="panel-body">
      <p>
        <strong>GUID:</strong>
        <%= @grant.GUID %>
      </p>

      <p>
        <strong>Amount:</strong>
        <%= solar_coin_amount(@grant.amount) %>
      </p>

      <p>
        <strong>Receiver wallet:</strong>
        <%= @grant.wallet.public_address %>
      </p>
      <% if @grant.bounties.size != 0 %>
        <hr/>
        <h5>Bounties</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>GUID</th>
              <th>Amount</th>
              <th>Receiver wallet</th>
              <th>Grant GUID</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @grant.bounties.each do |bounty| %>
              <tr>
                <td><%= bounty.GUID %></td>
                <td><%= solar_coin_amount(bounty.amount) %></td>
                <td><%= bounty.wallet.public_address %></td>
                <td><%= bounty.grant.GUID %></td>
                <td><%= link_to 'Show', bounty %></td>
                <td><%= link_to 'Edit', edit_bounty_path(bounty) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

      <%= link_to 'Edit', edit_grant_path(@grant) %> | 
      <%= link_to 'Back', grants_path %>  
    </div>    
</div>
