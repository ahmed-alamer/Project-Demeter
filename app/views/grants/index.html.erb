<% if notice %>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p id="notice"><%= notice %></p>
</div>
<br/>
<% end %>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>
    <div class="panel-body">
      <span class="pull-right">
        <%= link_to 'New Grant', new_grant_path, :class => "btn btn-primary" %>
      </span>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Entry date</th>
          <th>Approval code</th>
          <th>Amount</th>
          <th>Project</th>
          <th>Receiver wallet</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @grants.each do |grant| %>
          <tr>
            <td><%= grant.entry_date %></td>
            <td><%= grant.approval_code %></td>
            <td><%= grant.amount %></td>
            <td><%= grant.project_id %></td>
            <td><%= grant.receiver_wallet %></td>
            <td><%= link_to 'Show', grant %></td>
            <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>