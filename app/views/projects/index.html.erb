<% if notice %>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p id="notice"><%= notice %></p>
</div>
<br/>
<% end %>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Projects</div>
    <div class="panel-body">
      <span class="btn-group pull-left" role="group" aria-label="...">
        <%= get_button_link "Pending Projects", "P" %>
        <%= get_button_link "Approved Projects", "A" %>
        <%= get_button_link "Rejected Projects", "R" %>
      </span>
      <span class="pull-right">
        <%= link_to 'New Project', new_project_path, :class => "btn btn-primary" %>
        <%= link_to "Approve Projects", approve_projects_path, :class => "btn btn-success" %>
      </span>
      <br/>
      <hr/>
      <table id="myFuckingTable" class="table table-hover">
        <thead>
          <tr>
            <th>Generator ID</th>
            <th>Cliamant Email</th>
            <th>Claimant ID</th>
            <th>Status</th>
            <th>Name</th>
            <th>Nameplate</th>
            <th>Address</th>
            <th>Post code</th>
            <th>Country</th>
            <th>Install date</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.id %></td>
              <td><%= project.claimant.email %></td>
              <td><%= project.claimant_id %></td>
              <td><%= project.status == "P" ? "Pending" : project.status %></td>
              <td><%= project.name %></td>
              <td><%= number_to_human(project.nameplate, units: {unit: "kWh", hundred: "mWh", thousand: "gWh"}) %></td>
              <td><%= project.address %></td>
              <td><%= project.post_code %></td>
              <td><%= project.country %></td>
              <td><%= project.install_date.to_formatted_s(:iso8601) %></td>
              <td><%= link_to 'Show', project %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <script type="text/javascript">
        // $('#myFuckingTable').dynatable();
      </script>                
    </div>
</div>

