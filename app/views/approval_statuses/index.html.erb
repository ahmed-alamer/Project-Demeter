<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Approval Status Codes</h3>
    </div>
    <div class="panel-body">
      <span class="pull-right">
        <%= link_to 'New Approval status', new_approval_status_path, :class => "btn btn-primary" %>
      </span>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Code</th>
            <th>Details</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @approval_statuses.each do |approval_status| %>
            <tr>
              <td><%= approval_status.code %></td>
              <td><%= approval_status.details %></td>
              <td><%= link_to 'Show', approval_status %></td>
              <td><%= link_to 'Edit', edit_approval_status_path(approval_status) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
</div>