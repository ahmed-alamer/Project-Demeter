<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Adjustment Grants</h3>
  </div>
  <div class="panel-body">
    <div class="pull-right">
      <button id="executeButton" class="btn btn-success">Save & Download List</button>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Project</th>
        <th>Amount</th>
        <th>Receiver Wallet</th>
        <th>Receiver Email</th>
        <th>Type</th>
      </tr>
      </thead>
      <tbody>
      <% @adjustment_grants.each do |grant| %>
          <tr>
            <td><%= grant.project.id %></td>
            <td><%= solar_coin_amount(grant.amount) %></td>
            <td><%= grant.receiver_wallet %></td>
            <td><%= grant.project.claimant.email %></td>
            <td><%= grant.type_tag %></td> <!-- obviously! -->
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $('#executeButton').click(function() {
    $(this).prop('disabled', true);
    window.location = '<%= adjustment_grants_path format: :csv %>';
  });
</script>
