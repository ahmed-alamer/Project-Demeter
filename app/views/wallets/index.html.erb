<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>
    <div class="panel-body">
      <span class="pull-right">
        <%= link_to 'New Wallet', new_wallet_path, :class => "btn btn-primary" %>
      </span>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Public address</th>
          <th>Tag</th>
          <th>Owner</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @wallets.each do |wallet| %>
          <tr>
            <td><%= wallet.public_address %></td>
            <td><%= wallet.tag %></td>
            <td><%= wallet.claimant_id %></td>
            <td><%= link_to 'Show', wallet %></td>
            <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>